<layout type="relative" touch="true" align="center" scale="1.5">
    <img name="loading" atlas="atlas/lobby.plist" frame="connecting.png" align="center"/>
    <layout align="location_left_of_center" relative_to="loading" type="absolute">
        <img atlas="atlas/lobby.plist" frame="rotating.png"  x="30">
            <runaction>
                <action id="this">
                    <repeatforever>
                        <rotateby time="1.25" r="360"/>
                    </repeatforever>
                </action>
            </runaction>
        </img>
    </layout>
</layout>