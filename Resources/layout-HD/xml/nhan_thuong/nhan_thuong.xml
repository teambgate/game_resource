                    <img atlas="atlas/ui.plist" frame="the_cao.png" align="center" scale="1.6"/>
                </layout>
            </group>
            <group name="tinhethong" style="xml/ui/active_button.xml" width="332" height="61.5" touch="true" align="top_left" hashkey="quydinh_button" cascade_opacity="true">
