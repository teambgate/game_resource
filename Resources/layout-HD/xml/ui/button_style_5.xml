<touchdelegates>
    <touchdelegate name="onclick"/>
</touchdelegates>
<layout type="relative" touchdelegate="onclick">
    <img name="image" atlas="atlas/lobby.plist" frame="button_register.png" hashkey="image" width="match_parent" height="wrap_content" align="top_center_horizontal"/>
    <touchbegan>
		<action id="this:image">
			<scaleto time="0.1" x="0.9" y="0.9"/>
		</action>
	</touchbegan>	
	<touchend>
		<action id="this:image">
			<scaleto time="0.25" x="1" y="1"/>
		</action>
	</touchend>
	<touchcancel>
		<action id="this:image">
			<scaleto time="0.25" x="1" y="1"/>
		</action>
	</touchcancel>
	
